$(function() {
	   let likeVal = document.getElementById('like_check').value
        const edId = $("#edId").val();
        const memId = $("#memId").val();
        console.log(memId);
        console.log(likeVal);
        const likeImg = document.getElementById("likeImg")

        if (likeVal > 0) {
            likeImg.src = "../assets/img/course/on.png";
        } else {
            likeImg.src = "../assets/img/course/off.png";
        }
	
$("#likeImg").unbind('click').on('click', function() {
		$.ajax({
			url: '/academy/like',
            type: 'POST',
            data: {'edId': edId, 'memId': memId},
             success: function (data) {
                    if (data == 1) {
                        $("#likeImg").attr("src", "../assets/img/course/on.png");
                        location.href="../academy/course-sidebar";

                    } else {
                        $("#likeImg").attr("src", "../assets/img/course/off.png");
                        location.href="../academy/course-sidebar";
                    }
                }, error: function () {
                    $("#likeImg").attr("src", "../assets/img/course/on.png");
                    console.log('오타 찾으세요')
                }
		});
		/*$(this).toggleClass('on');
		
	if($(this).hasClass('on')){  
		 $(this).find("img").attr("src", "../assets/img/course/on.png");//행동에 따른 리액션
	}else{
		$(this).find("img").attr("src", "../assets/img/course/off.png");
	}*/
});



});
