$(function() {
$(".heart").unbind('click').on('click', function() {
		
		$(this).toggleClass('on');
		
	if($(this).hasClass('on')){  
		 $(this).find("img").attr("src", "../assets/img/course/on.png");//행동에 따른 리액션
	}else{
		$(this).find("img").attr("src", "../assets/img/course/off.png");
	}
});

$("#ctrbtn").unbind('click').on('click', function(){
	$(".panel-heading").find("a").toggleClass('collapsed');
	if($(".panel-heading").find("a").hasClass('collapsed')){  
	$(this).attr("class","");
	$("#panelline").attr("class","panel-collapse in");
	}else{
	$(".panel-heading").find("a").attr("class","collapsed");
	$("#panelline").attr("class","panel-collapse collapse");
		}
		
})

});
