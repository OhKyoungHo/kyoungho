$(function() {
	
$(".icon heart").unbind('click').on('click', function() {
		$.ajax({
			url: '../mypage/insert',
            type: 'POST',
            data: {'edId': edId, 'memId': memId},
             success: function () {
            $(".icon heart").toggleClass('on');
			if($(this).hasClass('on')){  
		 	$(this).find("img").attr("src", "../assets/img/course/on.png");//행동에 따른 리액션
			}else{
			$(this).find("img").attr("src", "../assets/img/course/off.png");
	
			}

}


});
});
});