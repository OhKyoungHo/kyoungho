$(function() {
$(".heart").unbind('click').on('click', function() {
		
		$(this).toggleClass('on');
		
	if($(this).hasClass('on')){  
		 $(this).find("img").attr("src", "../assets/img/course/on.png");//행동에 따른 리액션
		 
		 // 하트를 클릭 시 WishList 테이블에 저장
		 $.ajax({
                url: '/board/like',
                type: 'POST',
                data: {'boardId': boardId, 'memberId': memberId},
                success: function (data) {
                    if (data == 1) {
                        $("#likeImg").attr("src", "/assets/img/like_click.png");
                        location.href="/board/"+boardId;

                    } else {
                        $("#likeImg").attr("src", "/assets/img/like_empty.png");
                        location.href="/board/"+boardId;
                    }
                }, error: function () {
                    $("#likeImg").attr("src", "/assets/img/like_click.png");
                    console.log('오타 찾으세요')
                }

            });
            
	}else{
		$(this).find("img").attr("src", "../assets/img/course/off.png");
	}
});



});
